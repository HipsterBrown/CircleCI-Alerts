{
  "name": "CircleCI Alerts",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension was created to notify CircleCI users of their latest build status and history",
  "homepage_url": "https://github.com/HipsterBrown/CircleCI-Alerts",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon":  {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "CircleCI Alerts",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "notifications",
    "https://circleci.com/*"
  ]
}
